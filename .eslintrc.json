{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "@nuxtjs/eslint-config-typescript"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "space-before-function-paren": ["error", "never"],
        "curly": ["error", "multi-line"]
    }
}
